<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="codeVM" type="com.application.app.modules.code.data.viewmodel.CodeVM"/>
    </data>
    <FrameLayout android:id="@+id/frameCode"
        android:layout_height="match_parent"
        android:layout_width="match_parent" style="@style/groupStylewhite_1">

        <LinearLayout
            android:id="@+id/linearColumnsearch"
            android:layout_width="match_parent"
            android:layout_height="439dp"
            android:layout_gravity="top|start"
            android:layout_marginStart="@dimen/_28pxh"
            android:layout_marginTop="@dimen/_48pxv"
            android:layout_marginEnd="@dimen/_28pxh"
            android:layout_marginBottom="@dimen/_48pxv"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageSearch"
                android:layout_width="@dimen/_24pxh"
                android:layout_height="@dimen/_24pxh"
                android:layout_gravity="start"
                android:layout_marginEnd="@dimen/_10pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_search"
                tools:ignore="ContentDescription"
                tools:src="@drawable/img_search" />

            <TextView
                android:id="@+id/txtWelcomeaboard"
                style="@style/txtProximaNovaregular32"
                android:layout_width="319dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_21pxh"
                android:layout_marginTop="@dimen/_54pxv"
                android:layout_marginEnd="@dimen/_21pxh"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="@dimen/_7pxh"
                android:singleLine="true"
                android:text="@{codeVM.codeModel.txtWelcomeaboard}"
                tools:text="@string/lbl3" />

            <TextView
                android:id="@+id/txtLetsgetyour"
                style="@style/txtInterregular20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_21pxh"
                android:layout_marginTop="@dimen/_8pxv"
                android:layout_marginEnd="@dimen/_5pxh"
                android:ellipsize="end"
                android:gravity="end"
                android:letterSpacing="0.02"
                android:lineSpacingExtra="@dimen/_5pxh"
                android:singleLine="true"
                android:text="@{codeVM.codeModel.txtLetsgetyour}"
                tools:text="@string/msg4" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayOtpview"
                style="@style/txtregular8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_46pxv"
                android:hint="@string/lbl_code"
                android:textColorHint="@color/black_900" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextNumber_one"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding="10dp"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/editTextNumber_two"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding="10dp"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/editTextNumber_three"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding="10dp"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/editTextNumber_four"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding="10dp"
                    android:textSize="30sp" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imagePattern"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:scaleType="fitXY"
            android:src="@drawable/img_pattern_teal_100"
            tools:ignore="ContentDescription"
            tools:src="@drawable/img_pattern_teal_100" />

    </FrameLayout>
</layout>
